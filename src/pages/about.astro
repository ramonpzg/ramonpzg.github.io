        </div>
      </section>

      <!-- Teaching Experience -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-6 text-secondary-400">Teaching</h2>

        <div class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="teaching-card bg-background-900 p-4 rounded-lg relative">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="font-medium mb-2">London Business School</h3>
