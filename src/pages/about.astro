        <!-- INSEAD -->
        <div class="mb-8">
          <div class="flex justify-between items-start mb-2">
            <div>
              <h3 class="text-xl font-medium">Research Engineer at INSEAD</h3>
              <p class="text-text-300">Remote</p>
            </div>
            <span class="text-text-400">Oct-19 to April-21</span>
          </div>
